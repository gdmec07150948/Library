<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="110dp"
            android:id="@+id/iv_book_pic"
            android:scaleType="centerCrop"
            android:src="@drawable/book" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孩子，把你的手给我"
                android:textSize="18dp"
                android:textColor="#505756"
                android:singleLine="true"
                android:id="@+id/tv_book_name"
                android:layout_marginTop="1dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_book_name"
                android:textSize="16dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#97A0A2"
                android:text="畅销美国500多万册的教子经典，以31种语言畅销全世界，彻底改变父母与孩子沟通方式的巨著。"
                android:id="@+id/tv_book_contact" />

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="1dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/maintab_profile_icon"/>
                <TextView
                    android:id="@+id/tv_book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#97A0A2"
                    android:text="海姆·G·吉诺特"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>