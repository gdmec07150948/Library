<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout"
    android:padding="15dp">
    <TextView
        android:id="@+id/tv_notice_detail_title"
        android:textColor="#505756"
        android:textSize="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/list_divider_color"></View>
    <TextView
        android:id="@+id/tv_notice_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#505756"
        android:textSize="18dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_notice_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:textColor="#9098A0"
        android:textSize="16dp"/>
</LinearLayout>