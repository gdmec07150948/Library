<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F4F4F4"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <ImageView
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:id="@+id/iv_book_pic"
            android:scaleType="fitXY"
            android:src="@drawable/book" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孩子，把你的手给我"
                android:textSize="18dp"
                android:textColor="#505756"
                android:singleLine="true"
                android:id="@+id/tv_book_name"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/tv_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_book_name"
                android:layout_marginTop="10dp"
                android:textColor="#97A0A2"
                android:text="海姆·G·吉诺特"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#505756"
                android:text="借书时间"/>
            <TextView
                android:id="@+id/tv_borrow_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2017-1-1"
                android:textColor="#97A0A2"
                android:textSize="14dp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/list_divider_color"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应还时间"
                android:textColor="#505756"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_return_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2017-3-1"
                android:textColor="#97A0A2"
                android:textSize="14dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>